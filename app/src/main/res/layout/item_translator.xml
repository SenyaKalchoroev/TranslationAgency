<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="118dp"
    android:layout_height="172dp"
    android:layout_margin="8dp"
    android:background="@drawable/bg_cards_home"
    android:elevation="1dp">

    <ImageView
        android:id="@+id/item_user_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginBottom="68dp"
        android:src="@drawable/img_translator_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_search_button"
        android:fontFamily="@font/poppins_bold"
        android:paddingHorizontal="14dp"
        android:paddingVertical="1.5dp"
        android:text="Марк И."
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/item_user_image"
        app:layout_constraintEnd_toEndOf="@id/item_user_image"
        app:layout_constraintStart_toStartOf="@id/item_user_image" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/item_user_login"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:backgroundTint="#1E999999"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        android:paddingVertical="1dp"
        android:text="mark"
        android:textColor="@color/grey"
        android:textSize="6sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="@id/item_user_image"
        app:layout_constraintStart_toStartOf="@id/item_user_image"
        app:layout_constraintTop_toBottomOf="@id/item_user_name" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/filter_new"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginHorizontal="28dp"
        android:backgroundTint="#1E999999"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        android:paddingVertical="1dp"
        android:text="+7 1234567890"
        android:textColor="@color/grey"
        android:textSize="6sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_user_login" />

    <ImageButton
        android:id="@+id/item_home_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/bg_changes_order"
        android:src="@drawable/ic_house"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/item_settings_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_changes_order"
        android:src="@drawable/ic_settings_order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_home_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>