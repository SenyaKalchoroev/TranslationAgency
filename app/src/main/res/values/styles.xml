<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalendarWeekDayTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="CalendarDateTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheet</item>
    </style>

    <style name="AppBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar"/>

    <style name="BottomSheetTheme" parent="AppTheme">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_exit</item>
    </style>

</resources>